import numpy as np
import SpektralDiskretisering as *


def temperatur(x,my,sigma,ua,ub,A):
    
    B=calculate_B_Vector(x,my,sigma,ua,ub)
    
    y=calculate_U_Vector(A,B)
    
    u_avg=average(x,y)
    
    return u_avg-U_AVG
    
#Denne funksjonen skal ta inn en sigma og returnere u_avg-U_AVG

def mainkladd():
    a=0 #Startpunkt
    b=10  #Sluttpunkt
    N=100  #Antall punkter
    ua=5 #a Temp
    ub=5 #b Temp
    my=2
    sig1=5
    sig2=-5
    
    x=np.linspace(a,b,N)
    A=calculate_A_Matrix(x)
    sigma=finn_sigma(sig1,sig2)
    print(sigma)
    
mainkladd()
